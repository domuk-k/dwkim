{
  "name": "dwkim-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "dwkim workspace",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "build:dwkim": "pnpm --filter dwkim build",
    "dev:dwkim": "pnpm --filter dwkim dev",
    "lint:dwkim": "pnpm --filter dwkim lint",
    "build:blog": "pnpm --filter blog build",
    "dev:blog": "pnpm --filter blog dev",
    "lint:blog": "pnpm --filter blog lint",
    "release:dwkim": "pnpm run build:dwkim && cd packages/dwkim && npx semantic-release --no-ci",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
