{
  "name": "persona-api",
  "version": "2.0.0",
  "description": "Personalized RAG+LLM Chatbot API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit",
    "init-data": "bun scripts/initData.ts",
    "init-neon": "bun scripts/initNeonData.ts",
    "init-neon:clean": "bun scripts/initNeonData.ts --clean",
    "init-neon:test": "bun scripts/initNeonData.ts --test",
    "init-neon:retrieval": "bun scripts/initNeonData.ts --retrieval",
    "init-qdrant": "bun scripts/initQdrantData.ts",
    "init-qdrant:clean": "bun scripts/initQdrantData.ts --clean",
    "init-qdrant:test": "bun scripts/initQdrantData.ts --test",
    "init-qdrant:retrieval": "bun scripts/initQdrantData.ts --retrieval",
    "manage": "bun scripts/manageData.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.55.0",
    "@changesets/cli": "^2.29.4",
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@huggingface/transformers": "^3.8.1",
    "@langchain/anthropic": "^1.3.2",
    "@langchain/community": "^1.0.0",
    "@langchain/core": "^1.0.0",
    "@langchain/google-genai": "^1.0.0",
    "@langchain/langgraph": "^1.0.0",
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "@langchain/openai": "^1.2.0",
    "@langchain/qdrant": "^1.0.1",
    "@neondatabase/serverless": "^0.10.0",
    "@qdrant/js-client-rest": "^1.16.2",

    "dotenv": "^16.3.1",
    "fast-bm25": "^0.0.5",
    "fastify": "^4.24.3",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.3.2",
    "openai": "^6.15.0",
    "pg": "^8.13.0",
    "pino": "^10.1.0",
    "voyageai": "^0.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
