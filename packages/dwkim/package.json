{
  "name": "dwkim",
  "version": "2.0.1",
  "description": "Developer profile & AI chat in your terminal",
  "license": "MIT",
  "author": "dannyworks102@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/domuk-k/dwkim.git",
    "directory": "packages/dwkim"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dwkim": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts/install.sh",
    "package.json"
  ],
  "scripts": {
    "build": "bun script/build.js",
    "build:binary": "bunx pkg dist/index.js --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --output dist/bin/dwkim",
    "dev": "bun --watch src/index.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@catppuccin/palette": "^1.7.1",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "12",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "latest",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@yao-pkg/pkg": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "esbuild": "^0.20.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.8.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "outputPath": "dist/bin"
  }
}
