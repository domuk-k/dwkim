{
  "name": "dwkim",
  "version": "1.0.1",
  "description": "CLI business card and AI assistant for dwkim",
  "license": "MIT",
  "author": "dannyworks102@gmail.com",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dwkim": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts/install.sh",
    "package.json"
  ],
  "scripts": {
    "build": "node script/build.js",
    "build:binary": "pkg dist/index.js --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --output dist/bin/dwkim",
    "dev": "tsx watch src/index.tsx",
    "lint": "tsc"
  },
  "dependencies": {
    "@catppuccin/palette": "^1.7.1",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@yao-pkg/pkg": "^6.0.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "outputPath": "dist/bin"
  }
}
