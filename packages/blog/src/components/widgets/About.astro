---
import AboutTabs from '@/components/ui/AboutTabs.astro'
import Snippet from '@/components/ui/Snippet.astro'
---

<div class="about">
  <div class="about-intro">
    <Snippet code="npx dwkim" language="sh" />
  </div>
  <AboutTabs />
</div>

<style>
  .about:not(:empty) {
    margin-bottom: 1.25rem;
  }

  .about-intro {
    margin-bottom: 1rem;
  }

  .about-intro pre {
    margin: 0.5rem 0;
  }
</style>
